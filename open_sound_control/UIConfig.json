{
  "page": {
    "label": "Open Sound Control Plugin"
  },
  "sections": [
    {
      "id": "osc_conf",
      "element": "section",
      "label": "Open Sound Control Configuration",
      "icon": "fa-cogs",
      "onSave": {
        "type": "controller",
        "endpoint": "user_interface/open_sound_control",
        "method": "saveConf"
      },
      "saveButton": {
        "label": "Save",
        "data": [
          "osc_body_prefix",
          "osc_udp_local_port",
          "osc_udp_remote_port"
        ]
      },
      "content": [
        {
          "id": "osc_body_prefix",
          "element": "input",
          "type": "text",
          "doc": "This plugin will only answer to /<message_prefix>/... calls",
          "label": "Message prefix",
          "value": "volumio"
        },
        {
          "id": "osc_udp_local_port",
          "type": "number",
          "element": "input",
          "label": "Listening UDP port",
          "doc": "The UDP port on which this plugin will listen for OSC messages",
          "value": 9998
        },
        {
          "id": "osc_udp_remote_port",
          "type": "number",
          "element": "input",
          "label": "Remote client UDP port",
          "doc": "The UDP port on which this plugin will send message back to",
          "value": 9999
        }
      ]
    }
  ]
}