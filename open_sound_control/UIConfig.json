{
  "page": {
    "label": "Open Sound Control Plugin"
  },
  "sections": [
    {
      "id": "osc_conf",
      "element": "section",
      "label": "Open Sound Control Configuration",
      "icon": "fa-cogs",
      "onSave": {
        "type": "controller",
        "endpoint": "user_interface/open_sound_control",
        "method": "saveConf"
      },
      "saveButton": {
        "label": "Save",
        "data": [
          "osc_body_prefix"
        ]
      },
      "content": [
        {
          "id": "osc_body_prefix",
          "element": "input",
          "type": "text",
          "doc": "This plugin will only answer to /<message_prefix>/... calls",
          "label": "Message prefix",
          "value": "volumio",
          "attributes": [
            {
              "placeholder": "volumio"
            }
          ]
        }
      ]
    }
  ]
}